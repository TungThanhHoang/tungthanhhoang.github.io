<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../layout/common.ejs") -%>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h3>LOGIN </h3>
        <% if( typeof(errors) == "object") { %>
        <% for( error in errors ){ %>
        <div class="alert alert-danger">
            <%= errors[error] %>
        </div>
        <% } %>
        <% }  %>
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Enter email" value="<% if(typeof values == "object") { %> <%= values.email%> <%}%>" >
                 
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Enter password" value="<% if(typeof values == "object") { %> <%= values.password%> <%}%>">
                    
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</body>
</html>