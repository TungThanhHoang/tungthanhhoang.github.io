<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../layout/common") -%>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h3>CREATE </h3>
        <% if( typeof(errors) == "object") { %>
        <% for( error in errors ){ %>
        <div class="alert alert-danger">
            <%= errors[error] %>
        </div>
        <% } %>
        <% }  %>
        <form action="/user/create" method="POST" enctype="multipart/form-data" >
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
            <input type="text" name="name" class="form-control" placeholder="Enter name" value="<% if(typeof values == "object") { %> <%= values.name%> <%}%>" >
                 
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="text" name="phone" class="form-control" placeholder="Enter phone" value="<% if(typeof values == "object") { %> <%= values.phone%> <%}%>">
             
                <div class="form-group">
                    <input type="file" class="form-control-file"  name="avatar">
                  </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</body>
</html>